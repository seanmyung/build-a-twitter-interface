.grid-33
  .app--section
    ul.app--user--list
      each friends in data.friends
        li
          .circle--fluid
            .circle--fluid--cell.circle--fluid--primary
              a.app--tweet--author
                .app--avatar(style='background-image: url(' + friends.profile_image_url + ')')
                  img(src=friends.profile_image_url)
                h4 #{friends.name}
                p @#{friends.screen_name}
            .circle--fluid--cell
              if friends.following
                a.button.button-text Unfollow
              else 
                a.button Follow